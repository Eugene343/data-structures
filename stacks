# class
class Stack:
    """
    This class is an ADT stck to use create the methods for a stack
    """
    MAXIMUM_CAPACITY = 4

    # initialization
    def __init__(self):
        self.stack_array = []
        self.top = -1
        self.size = 0

    def __len__(self):
        return self.size

    def peek(self):
        if len(self.stack_array) > 1:
            return self.stack_array[-1]
        else:
            return None

    def push(self, num):
        if self.is_full():
            print("Stack Overflow")
        else:
            self.top += 1
            self.size += 1
            self.stack_array.append(num)

    def pop(self):
        if self.is_empty():
            print("Stack empty")
        else:
            self.top -= 1
            self.size -= 1
            self.stack_array.remove(self.stack_array[-1])

    def is_empty(self):
        if self.size == 0:
            return True
        else:
            return False

    def is_full(self):
        if self.size == self.MAXIMUM_CAPACITY:
            return True
        else:
            return False


def execute():
    s = Stack()
    print("1.   Push\n"
          "2.   Pop\n"
          "3.   Print the top element\n"
          "4.   Print all the elements\n"
          "5.   Quit")

    while True:
        choice = int(input("Please enter your choice:"))
        while choice not in range(1, 5):
            print("invalid input")
            choice = int(input("Please enter your choice:"))
        if choice == 1:
            num = input("Enter a number")
            s.push(num)
        elif choice == 2:
            s.pop()
        elif choice == 3:
            print(s.peek())
        elif choice == 4:
            print(s.stack_array)
        elif choice == 5:
            break


execute()
